{
    "manifest_version": 2,
    "description": "Saving ChatGPT ",
    "name": "Simple Chrome extension to save ChatGPT conversation threads.",
    "version": "1.0",
    "permissions": [
        "tabs",
        "*://chat.openai.com/chat",
        "downloads"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": "icon.png"
    }
}